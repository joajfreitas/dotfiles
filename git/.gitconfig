[commit]
	gpgsign = true
	verbose = true
[core]
	editor = nvim
	attributesfile = ~/.config/git/attributes
	whitespace = trailing-space,space-before-tab
	fsmonitor = true
	untrackedCache = true
[column]
	ui = auto
[branch]
	sort = -committerdate
[merge "json"]
	name = custom merge driver for json files
	driver = git-json-merge %A %O %B
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[apply]
	whitespace = fix
[rerere]
	enabled = true
	autoupdate = true
[push]
	recurseSubmodules = check
	autoSetupRemote = true
	followTags = true
[merge]
	tool = nvimdiff
	conflictstyle = zdiff3
[mergetool]
	prompt = false
	keepBackup = false
[mergetool "nvimdiff"]
	layout = "LOCAL,BASE,REMOTE / MERGED"
[tag]
	sort = version:refname
[diff]
	algorithm = histogram
	colorMoved = plain
	renames = true
	mnemonicPrefix = true
[fetch]
	prune = true
	pruneTags = true
	all = true
[rebase]
	autoSquash = true
	autoStash = true
	updateRefs = true
[pull]
	rebase = true
[alias]
	lg = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all -n 15
	out = "log @{u}.."
