#	host = "/home/joaj/.config/mpd/socket"
#}

ethernet enp0s25 {
	# if you use %speed, i3status requires root privileges
	format_up = "E %ip"
	format_down = "_"
	#format_down = "E"
}


wireless wlp3s0 {
	format_up = "W  %essid - %ip"
	format_down = "D"
}

load {
	format = "  %1min "
	max_threshold = "2"
}

cpu_usage {
	#format = "L %usage"
	format = "  %usage"
}

cpu_temperature 0 {
	format = "T %degrees ºC"
	#format = "T %degrees ºC"
}

battery 0 {
	integer_battery_capacity = "true"
	hide_seconds = "true"
	path = "/sys/class/power_supply/BAT%d/uevent"
	format = "%status %percentage %remaining"
	status_bat = "B"
	status_unk = "U"
	status_full = "F"
	status_chr = "C"
	low_threshold = "10"
	threshold_type = "percentage"
	last_full_capacity = "true"
}

battery 1 {
	integer_battery_capacity = "true"
	hide_seconds = "true"
	path = "/sys/class/power_supply/BAT%d/uevent"
	format = "%status %percentage %remaining"
	status_bat = "B"
	status_unk = "U"
	status_full = "F"
	status_chr = "C"
	low_threshold = "10"
	threshold_type = "percentage"
	last_full_capacity = "true"
}

disk "/" {
	prefix_type = "binary"
	format = "S %free"
	low_threshold = 5
}

disk "/home/joaj" {
	prefix_type = "binary"
	format = "S %free"
	low_threshold = 5
} 

volume master {
	device = "pulse"
	format = "| %volume"
	format_muted = "O %volume"
}

tztime date {
	format = "D %a %d/%m/%Y"
}

tztime time {
	format = "T %H:%M"
}
