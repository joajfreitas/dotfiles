#!/bin/bash

if [ $1 -eq 2 ] 
then
	rm /home/joaj/bin/python
	rm /usr/bin/python
	ln -s /usr/bin/python2 /home/joaj/bin/python
	ln -s /usr/bin/python2 /usr/bin/python
elif [ $1 -eq 3 ] 
then
	rm /home/joaj/bin/python
	rm /usr/bin/python
	ln -s /usr/bin/python3 /home/joaj/bin/python
	ln -s /usr/bin/python3 /usr/bin/python
else
	echo "Error: argument must be 2|3 "
fi

