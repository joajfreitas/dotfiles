#!/usr/bin/bash

#stolen from https://stackoverflow.com/questions/7126580/expand-a-possible-relative-path-in-bash
function abs_path {
  (cd "$(dirname '$1')" &>/dev/null && printf "%s/%s" "$PWD" "${1##*/}")
}

echo \<link rel\=\"stylesheet\" href\=\"$(abs_path $2) \"\> > /tmp/temp.html
markdown $1 >> /tmp/temp.html
firefox /tmp/temp.html
sleep 5
